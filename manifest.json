{
  "manifest_version": 3,
  "name": "Pinterest Purifier",
  "version": "1.0",
  "description": "Une expérience Pinterest authentique : sans pubs, sans fast-fashion, sans pop-ups et avec des fonctionnalités avancées.",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "*://*.pinterest.com/*",
    "*://*.pinterest.fr/*",
    "*://*.pinimg.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Configurer Pinterest Purifier"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.pinterest.com/*",
        "*://*.pinterest.fr/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}